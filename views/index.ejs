<!DOCTYPE html>
<html>
  <head>
    <title>Lisper</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Titan+One&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    
    <img src="../images/jezswhite.png">
    <div class="table-responsive">
      <table class="table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Coin Symbol</th>
            <th scope="col">Price 24hrs</th>
            <th scope="col">Volume 24hrs</th>
            <th scope="col">Last Trade Price</th>
          </tr>
        </thead>
        <tbody>
          <% coinData.forEach((coin, index) => { %>
          <tr>
            <td><%= startItemNumber  + index%></td>
            <td><%= coin.symbol %></td>
            <td><%= coin.price_24h %></td>
            <td><%= coin.volume_24h %></td>
            <td><%= coin.last_trade_price %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="pagination">
      <% if (totalPages > 1) { %>
        <% for (let page = 1; page <= totalPages; page++) { %>
          <a href="?page=<%= page %>" class="<%= currentPage === page ? 'active' : '' %>"><%= page %></a>
        <% } %>
      <% } %>
    </div>
  </body>
</html>
